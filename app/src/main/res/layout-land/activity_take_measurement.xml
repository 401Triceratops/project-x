<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TakeMeasurementActivity">

    <Button
        android:id="@+id/buttonBatchDetailTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/goToBatchDetailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTemperatureTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/temperatureFtext"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTemperatureTakeMeasurement"
        app:layout_constraintEnd_toStartOf="@+id/editTextTemperatureTakeMeasurement"
        app:layout_constraintTop_toTopOf="@+id/editTextTemperatureTakeMeasurement" />

    <EditText
        android:id="@+id/editTextTemperatureTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:hint="@string/fahrenheitText"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBatchNumberTakeMeasurment" />

    <TextView
        android:id="@+id/textViewTempCorrectionTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/temperatureCorrectionFText"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTempCorrectionTakeMeasurement"
        app:layout_constraintEnd_toStartOf="@+id/editTextTempCorrectionTakeMeasurement"
        app:layout_constraintTop_toTopOf="@+id/editTextTempCorrectionTakeMeasurement" />

    <Button
        android:id="@+id/buttonSaveMeasurementTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/saveMeasurementText"
        app:layout_constraintEnd_toEndOf="@+id/buttonBatchDetailTakeMeasurement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBatchDetailTakeMeasurement" />

    <EditText
        android:id="@+id/editTextHydroCorrectionTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/hydrometerCorrectionText"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHydrometerTakeMeasurement" />

    <EditText
        android:id="@+id/editTextHydrometerTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/hydroText"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTempCorrectionTakeMeasurement" />

    <TextView
        android:id="@+id/textViewProofTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proofAtFText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCalculatedProofTakeMeasurement"
        app:layout_constraintEnd_toEndOf="@+id/textViewHydroCorrectionTakeMeasurement"
        app:layout_constraintTop_toTopOf="@+id/textViewCalculatedProofTakeMeasurement"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTempCorrectionTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/temperatureCorrectionFText"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTemperatureTakeMeasurement" />

    <TextView
        android:id="@+id/textViewCalculatedProofTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewProofTakeMeasurement"
        app:layout_constraintTop_toBottomOf="@+id/editTextHydroCorrectionTakeMeasurement" />

    <TextView
        android:id="@+id/textViewHydroCorrectionTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="@string/hydrometerCorrectionText"
        app:layout_constraintBottom_toBottomOf="@+id/editTextHydroCorrectionTakeMeasurement"
        app:layout_constraintEnd_toStartOf="@+id/editTextHydroCorrectionTakeMeasurement"
        app:layout_constraintTop_toTopOf="@+id/editTextHydroCorrectionTakeMeasurement" />

    <TextView
        android:id="@+id/textViewHydrometerTakeMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="@string/hydrometerText"
        app:layout_constraintBottom_toBottomOf="@+id/editTextHydrometerTakeMeasurement"
        app:layout_constraintEnd_toStartOf="@+id/editTextHydrometerTakeMeasurement"
        app:layout_constraintTop_toTopOf="@+id/editTextHydrometerTakeMeasurement" />

    <TextView
        android:id="@+id/textViewBatchNumberTakeMeasurment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/batchText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewTakeMeasurementdsp"
        app:layout_constraintStart_toStartOf="@+id/textViewTakeMeasurementdsp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTakeMeasurementdsp" />

    <TextView
        android:id="@+id/textViewTakeMeasurementdsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/distilleryAndDspText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>