<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentTask"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/batchNumberActiveBatchListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="76dp"
        android:text="Batch no. 1501"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/batchTypeActiveBatchListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Whiskey"
        app:layout_constraintBottom_toBottomOf="@+id/batchNumberActiveBatchListItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/batchNumberActiveBatchListItem"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/startedAtActiveBatchListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="8:24am today"
        app:layout_constraintBottom_toBottomOf="@+id/startedAtTextActiveBatchListItem"
        app:layout_constraintStart_toEndOf="@+id/startedAtTextActiveBatchListItem"
        app:layout_constraintTop_toBottomOf="@+id/batchTypeActiveBatchListItem"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/startedAtTextActiveBatchListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Started at:"
        app:layout_constraintStart_toStartOf="@+id/batchTypeActiveBatchListItem"
        app:layout_constraintTop_toBottomOf="@+id/batchTypeActiveBatchListItem" />

    <TextView
        android:id="@+id/lastMeasurementTextActiveBatchListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Last Measurement:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startedAtTextActiveBatchListItem" />

    <TextView
        android:id="@+id/measuredProofActiveBatchListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="101.1 proof"
        app:layout_constraintStart_toStartOf="@+id/batchNumberActiveBatchListItem"
        app:layout_constraintTop_toTopOf="@+id/startedAtActiveBatchListItem" />

    <TextView
        android:id="@+id/measuredAtTimeActiveBatchListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="10:06:21 am today"
        app:layout_constraintStart_toEndOf="@+id/lastMeasurementTextActiveBatchListItem"
        app:layout_constraintTop_toTopOf="@+id/lastMeasurementTextActiveBatchListItem" />

</androidx.constraintlayout.widget.ConstraintLayout>