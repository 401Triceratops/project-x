<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MeasurementDetailActivity">

    <TextView
            android:text="Measurement Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitleMeasurementDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDdsp"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="Batch #"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBatchNumMeasurementDetail"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleMeasurementDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="10:10:15 am 11/21/21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewdateTimeMeasurementDetail"
            app:layout_constraintTop_toBottomOf="@+id/textViewBatchNumMeasurementDetail"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:text="Save Note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSaveNoteMeasurementDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" />

    <TextView
            android:text="Flag as problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDFlag"
            app:layout_constraintTop_toTopOf="@+id/buttonSaveNoteMeasurementDetail"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSaveNoteMeasurementDetail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />

    <TextView
            android:text="Hydrometer Correction: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDTitleHydroCorrection"
            app:layout_constraintTop_toBottomOf="@+id/textViewdateTimeMeasurementDetail"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewBatchNumMeasurementDetail" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDHydroCorrection"
            app:layout_constraintTop_toTopOf="@+id/textViewMDTitleHydroCorrection"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMDTitleHydroCorrection"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textViewMDTitleHydroCorrection"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="Temperature Correction:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDTitleTempCorrection"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDTitleHydroCorrection"
            app:layout_constraintEnd_toEndOf="@+id/textViewBatchNumMeasurementDetail"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textViewMDTitleTempCorrection"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMDTitleTempCorrection"
            app:layout_constraintStart_toEndOf="@+id/textViewMDTitleTempCorrection"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="Corrected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDCorrected"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDTitleTempCorrection"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewBatchNumMeasurementDetail" />

    <TextView
            android:text="difference in Hydrometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDdiffHydro"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDCorrected"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewBatchNumMeasurementDetail" />

    <TextView
            android:text="difference in Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDdiffTemp"
            app:layout_constraintEnd_toEndOf="@+id/textViewBatchNumMeasurementDetail"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDCorrectedHydro"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="Interpolation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDTitleInterpolation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDdiffTemp"
            android:layout_marginTop="24dp"
            android:textSize="18sp" />

    <TextView
            android:text="Final Proof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDFinalProof"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDTemp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDTemp"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDAlcohol"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewBatchNumMeasurementDetail" />

    <TextView
            android:text="Alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDAlcohol"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDTitleInterpolation"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewBatchNumMeasurementDetail" />

    <TextView
            android:text="Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDNote"
            android:background="@drawable/border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDFinalProof"
            android:layout_marginTop="16dp" />

    <TextView
            android:text="Corrected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDCorrectedHydro"
            app:layout_constraintTop_toBottomOf="@+id/textViewMDdiffHydro"
            app:layout_constraintEnd_toEndOf="@+id/textViewBatchNumMeasurementDetail"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="Distillery and DSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMDdsp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>