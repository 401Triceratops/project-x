<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActivity">

    <EditText
        android:id="@+id/editTextEmailConfirmationSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/reTypeEmailText"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordSignup"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordSignup"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailSignup" />

    <TextView
        android:id="@+id/textViewTitleSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/signUpText"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSubheadSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSubheadSignup"
        android:layout_width="299dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/signUpTitle"
        app:layout_constraintEnd_toEndOf="@+id/textViewTitleSignup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTitleSignup"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleSignup" />

    <EditText
        android:id="@+id/editTextEmailSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/emailText"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailConfirmationSignup"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailConfirmationSignup"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubheadSignup" />

    <EditText
        android:id="@+id/editTextPasswordSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/passwordText"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordConfirmationSignup"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordConfirmationSignup"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailConfirmationSignup" />

    <EditText
        android:id="@+id/editTextPasswordConfirmationSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/reTypePasswordText"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/editTextDSP"
        app:layout_constraintStart_toStartOf="@+id/editTextDSP"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordSignup" />

    <Button
        android:id="@+id/buttonSignupSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUpText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAgreementButton" />

    <TextView
        android:id="@+id/labelForEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emailText"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailSignup"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailSignup" />

    <TextView
        android:id="@+id/labelForEmailConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmationEmailText"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailConfirmationSignup"
        app:layout_constraintStart_toStartOf="@+id/editTextEmailConfirmationSignup" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passwordText"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordSignup"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordSignup" />

    <TextView
        android:id="@+id/passwordConfirmationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmPasswordText"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordConfirmationSignup"
        app:layout_constraintStart_toStartOf="@+id/editTextPasswordConfirmationSignup" />

    <TextView
        android:id="@+id/labelForDSPNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dSPNumberText"
        app:layout_constraintBottom_toTopOf="@+id/editTextDSP"
        app:layout_constraintStart_toStartOf="@+id/editTextDSP" />

    <Button
        android:id="@+id/userAgreementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DF4444"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingRight="4dp"
        android:paddingBottom="1dp"
        android:text="@string/userAgreementButtonText"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignupSignup"
        app:layout_constraintStart_toStartOf="@+id/editTextDSP"
        app:layout_constraintTop_toBottomOf="@+id/editTextDSP" />

    <EditText
        android:id="@+id/editTextDSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/shortDSPNumberText"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignupSignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordConfirmationSignup" />
</androidx.constraintlayout.widget.ConstraintLayout>