<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentMeasurementListItem"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/measuredProofMeasurementListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="Measured Proof: 100.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/measuredAtTimeMeasurementListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Five minutes ago"
        app:layout_constraintBottom_toBottomOf="@+id/measuredProofMeasurementListItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/measuredProofMeasurementListItem"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/measuredAtDateMeasurementListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="11/11/11"
        app:layout_constraintEnd_toEndOf="@+id/measuredAtTimeMeasurementListItem"
        app:layout_constraintStart_toStartOf="@+id/measuredAtTimeMeasurementListItem"
        app:layout_constraintTop_toBottomOf="@+id/measuredAtTimeMeasurementListItem" />
</androidx.constraintlayout.widget.ConstraintLayout>