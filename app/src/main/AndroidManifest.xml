<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trueproof.trueproof">

    <application
        android:name=".TrueProofApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrueProof">
        <activity
            android:name=".activities.References"
            android:label="References" />
        <activity android:name=".activities.UserAgreementActivity"
            android:label="User Agreement"
            />
        <activity android:name=".activities.SignUpActivity"
            android:label="Sign up"
            />
        <activity android:name=".activities.SignUpConfirmationActivity"
            android:label="Confirmation"
            />
        <activity android:name=".activities.LogInActivity"
            android:label="Log In"
            />
        <activity android:name=".activities.MeasurementDetailActivity"
            android:label="Measurement Detail"
            />
        <activity android:name=".activities.SettingsActivity"
            android:label="Settings"
            />
        <activity android:name=".activities.NewBatchActivity"
            android:label="New Batch"
            />
        <activity android:name=".activities.BatchDetailActivity"
            android:label="Batch"
            />
        <activity android:name=".activities.BatchListActivity"
            android:label="Your Batches"
            />
        <activity android:name=".activities.TakeMeasurementActivity"
            android:label="Take Measurement"
            />
        <activity android:name=".activities.MainActivity"
            android:label="True Proof"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>